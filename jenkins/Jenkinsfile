pipeline {
    agent any
    tools {
        // This MUST match the name in your Global Tool Configuration exactly
        maven 'MAVEN 3' 
    }
    stages {
        stage('Build') {
            steps {
                bat 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('Deliver') { 
            steps {
                // Use 'bat' for Windows agents, not 'sh'
                bat 'call/jenkins/scripts/deliver.bat' 
            }
        }
    } // This closing bracket now correctly wraps ALL stages
}
