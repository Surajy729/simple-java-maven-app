pipeline {
    agent any
    tools {
        // This MUST match the name in your Global Tool Configuration exactly
        maven 'MAVEN 3' 
    }
    stages {
        stage('Build') {
            steps {
                bat 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

     stage('Deliver') {
    steps {
        // Run the commands directly in the pipeline to avoid .bat path issues
        bat """
            for /f "usebackq delims=" %%i in (`mvn -q -DforceStdout help:evaluate -Dexpression=project.name`) do set NAME=%%i
            for /f "usebackq delims=" %%i in (`mvn -q -DforceStdout help:evaluate -Dexpression=project.version`) do set VERSION=%%i
            java -jar target\\%NAME%-%VERSION%.jar
        """
    }
}
    } // This closing bracket now correctly wraps ALL stages
}
